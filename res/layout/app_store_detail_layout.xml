<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mDetail_main_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="620.0dip"
    android:layout_height="450.0dip"
    android:layout_gravity="center"
    android:background="@drawable/common_bg">

    <ImageView
        android:id="@+id/app_detail_icon"
        android:layout_width="122.099976dip"
        android:layout_height="122.099976dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36.95999dip"
        android:layout_marginTop="24.419983dip"
        android:scaleType="fitXY"
        android:src="@drawable/tv_posters_item_bg"/>

    <LinearLayout
        android:id="@+id/app_detail_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/app_detail_icon"
        android:layout_alignTop="@+id/app_detail_icon"
        android:layout_marginLeft="23.099976dip"
        android:layout_toRightOf="@+id/app_detail_icon"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_detail_name"
            style="@style/app_detail_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_detail_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_detail_type"
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_detail_type"/>

            <TextView
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.099976dip"
                android:text="@string/app_detail_line"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/app_ID"
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.099976dip"
                android:text="@string/app_detail_appid"
                android:visibility="gone"/>

            <TextView
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.099976dip"
                android:text="@string/app_detail_line"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/app_detail_params"
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.099976dip"
                android:text="@string/app_detail_params"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/app_detail_ver"
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_detail_version"/>

            <TextView
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.099976dip"
                android:text="@string/app_detail_line"/>

            <TextView
                android:id="@+id/app_detail_update"
                style="@style/app_detail_other_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.099976dip"
                android:text="@string/app_detail_update"/>
        </LinearLayout>

        <TextView
            android:id="@+id/app_detail_version"
            style="@style/app_detail_other_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_detail_version"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_detail_new_update_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_detail_icon"
        android:layout_below="@+id/app_detail_icon"
        android:layout_marginTop="23.099976dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/app_detail_new_version"
            style="@style/app_detail_new_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_detail_new_version"/>

        <TextView
            style="@style/app_detail_new_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.099976dip"
            android:text="@string/app_detail_line"/>

        <TextView
            android:id="@+id/app_detail_new_size"
            style="@style/app_detail_new_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.099976dip"
            android:text="@string/app_detail_size"/>

        <TextView
            style="@style/app_detail_new_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.099976dip"
            android:text="@string/app_detail_line"/>

        <TextView
            android:id="@+id/app_detail_new_version_date"
            style="@style/app_detail_new_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.099976dip"
            android:text="@string/app_detail_new_version_date"/>
    </LinearLayout>

    <TextView
        android:id="@+id/app_detail_install"
        style="@style/app_detail_intro_info_value"
        android:layout_width="500.0dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_detail_icon"
        android:layout_below="@+id/app_detail_new_update_layout"
        android:layout_marginRight="36.95999dip"
        android:layout_marginTop="33.0dip"
        android:ellipsize="end"
        android:text="@string/app_detail_install"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/app_detail_intro_info"
        style="@style/app_detail_intro_info_value"
        android:layout_width="500.0dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/app_detail_icon"
        android:layout_below="@+id/app_detail_icon"
        android:layout_marginRight="36.95999dip"
        android:layout_marginTop="33.0dip"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="@string/app_detail_intro_info"/>

    <ImageView
        android:id="@+id/app_detail_button_tongbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/app_store_detail_tongbu_bg"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/app_detail_button_free"
        android:layout_width="160dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/app_store_detail_free_bg"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/app_detail_button_layout_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/app_detail_button_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_store_detail_open_bg"
            android:focusable="true"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/app_detail_button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:background="@drawable/app_store_detail_update_bg"
            android:focusable="true"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/app_detail_download_statue"
        style="@style/as_progress_style"
        android:layout_width="396.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27.71997dip"
        android:visibility="gone"/>

    <com.word.wordinsidehome.view.InstallProgressView
        android:id="@+id/app_detail_setup_statue"
        android:layout_width="396.0dip"
        android:layout_height="25.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27.71997dip"
        android:background="@drawable/as_progressbar_bg"
        android:padding="3.0dip"
        android:visibility="gone"/>
</RelativeLayout>
